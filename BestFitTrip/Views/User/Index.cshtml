@model BestFitTrip.ViewModels.LoginUserViewModel


        <div class="container" style="width: 30%;">
            <h1>Login</h1>

            <form method="post">
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input class="form-control" asp-for="Username" />
                    <span asp-validation-for="Username" style="color: red"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input class="form-control" asp-for="Password" />
                    <span asp-validation-for="Password" style="color: red"></span>
                </div>

                <input type="submit" value="Login" class="btn btn-info" />
                <a type="button" class="btn btn-danger" asp-area="" asp-controller="User" asp-action="Register">Register</a>
            </form>
        </div>